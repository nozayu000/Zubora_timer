<div class = "container">
  <div class="row">
    <div class="col-xs-12">
    <h3><strong>マイページ</strong></h3>
      <table class="table table-bordered table-condensed">
        <p>
          <strong class="information-link">登録情報</strong>
          <%= link_to " 編集する", edit_user_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
        </p>
        <tr>
          <td class="col-xs-2">氏名</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td class="col-xs-2">メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td class="col-xs-2">ニックネーム</td>
          <td><%= current_user.nickname %></td>
        </tr>
        <tr>
          <td class="col-xs-2">年齢</td>
          <td><%= current_user.age %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
