<div class = "container">
  <div class="row">
    <div class="col-xs-12">
      <h3><strong>登録情報編集</strong></h3>
      <%= form_with model: @user, url: user_path ,method: :PATCH do |f| %>
        <div>
          <div class="col-xs-12">
            <%= f.label :"氏名", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.text_field :name, class: "last_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
          </div>
          <div class="col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static", style: "margin: 10px;" %>
          </div>
          <div class="col-xs-12">
            <%= f.label :"ニックネーム", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.text_field :nickname, class: "col-sm-2 form-control-static", style: "margin: 10px;" %>
          </div>
          <div class="col-xs-12">
            <%= f.label :"年齢", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.text_field :age, class: "col-sm-8 form-control-static", style: "margin: 10px;" %>
          </div>
        </div>

        <div class="actions col-xs-10 col-xs-offset-2">
          <p>
            <%= f.submit "編集内容を保存", class: "btn btn-primary col-sm-3" %>
            <%#= link_to " 退会する", customers_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-danger text-align: left" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>