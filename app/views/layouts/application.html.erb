<!DOCTYPE html>
<html>
  <head>
    <title>Zubora</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <li>
      <%= link_to "About", about_path %>
    </li>
    <li>
      <%= link_to "マイページ", user_path(current_user.id) %>
    </li>
    <li>
      <%= link_to "タイマー", timers_index_path %>
    </li>
    <li>
      <%= link_to "タイマー設定", timers_show_path %>
    </li>
    <li>
      <%= link_to "カレンダー", calendars_index_path %>
    </li>
    <li>
      <%= link_to "ランキング", rankings_index_path %>
    </li>
    <li>
      <%= link_to "ログアウト",destroy_user_session_path, method: :delete %>
    </li>
    
    <% else %>
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <li>
      <%= link_to "About", about_path %>
    </li>
    <li>
      <%= link_to "新規登録",new_user_registration_path %>
    </li>
    <li>
      <%= link_to "ログイン",new_user_session_path %>
    </li>
    <li>
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "login" %></li>
    </li>
    
    <% end %>

    <%= yield %>
  </body>
</html>
